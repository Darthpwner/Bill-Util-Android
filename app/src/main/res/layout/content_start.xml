<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="matthewallenlinsoftware.billutil.StartActivity"
    tools:showIn="@layout/activity_start"
    android:background="#aeff00">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What would you like to do?"
        android:textSize="32sp"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:gravity="center_horizontal"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate Tip"
        android:id="@+id/button"
        android:layout_marginTop="52dp"
        android:textColor="#00a6ff"
        android:background="@null"
        android:textStyle="bold"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/button2"
        android:onClick="onClickTipCalculator" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate Sales Tax"
        android:id="@+id/button2"
        android:textColor="#00a6ff"
        android:background="@null"
        android:textStyle="bold"
        android:layout_below="@+id/button"
        android:layout_alignStart="@+id/button3"
        android:onClick="onClickSalesTaxCalculator" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate Income"
        android:id="@+id/button3"
        android:textColor="#00a6ff"
        android:textStyle="bold"
        android:background="@null"
        android:layout_below="@+id/button2"
        android:layout_alignStart="@+id/button4"
        android:onClick="onClickIncomeCalculator" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convert Currency"
        android:id="@+id/button4"
        android:textColor="#00a6ff"
        android:textStyle="bold"
        android:background="@null"
        android:layout_below="@+id/button3"
        android:layout_alignStart="@+id/button5"
        android:onClick="onClickConvertCurrency" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate Rent"
        android:id="@+id/button5"
        android:layout_below="@+id/button4"
        android:layout_centerHorizontal="true"
        android:textColor="#00a6ff"
        android:textStyle="bold"
        android:background="@null"
        android:onClick="onClickCalculateRent" />
</RelativeLayout>
